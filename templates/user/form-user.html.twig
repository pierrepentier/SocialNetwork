{% extends 'base.html.twig' %}

{% form_theme formUser 'bootstrap_4_layout.html.twig' %}

{% block title %} Registration {% endblock %}

{% block body %}
    <div class="container-fluid vh-100 p-5" style="background-color:#7eb8da">
        <div class="container">
            <form method="post">
                <div class="row">
                    <div class="col-lg-6 offset-lg-3 bg-dark p-4 rounded-lg">
                        <div class="row">
                            <div class="col-lg-8 offset-lg-2 text-white">
                                <h1 class="mb-3 font-weight-normal text-center">Please Register</h1>
                                {{ form_start(formUser) }}
                                {{ form_row(formUser.username) }}
                                {{ form_row(formUser.email) }}
                                {{ form_row(formUser.plainPassword.first) }}
                                {{ form_row(formUser.plainPassword.second) }}
                                <div class="row justify-content-center">
                                    <div class="col-lg-4 justify-content-center">
                                        <a href="{{ path("app_login") }}" class="btn btn-primary mt-3 w-100" >Back</a>
                                    </div>                                
                                    <div class="col-lg-4 offset-lg-2 mt-3 justify-content-center">
                                        {{ form_row(formUser.register) }}
                                        {{ form_end(formUser) }}
                                    </div>                                
                                </div>                                
                            </div>
                        </div>
                    </div>
                </div>       
            </form>
        </div>
    </div>

{% endblock %}
